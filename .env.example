# Application
APP_NAME=UMatter Backend
ENVIRONMENT=development
DEBUG=True
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/umatter_db
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=umatter_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Vector Database (same PostgreSQL with pgvector extension)
VECTOR_DB_URL=postgresql+asyncpg://user:password@localhost:5432/umatter_db

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Render (Production)
# DATABASE_URL will be automatically set by Render
